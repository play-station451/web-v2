{
	"compilerOptions": {
		"target": "ES2020",
		"useDefineForClassFields": true,
		"lib": ["ES2020", "DOM", "DOM.Iterable"],
		"module": "ESNext",
		"skipLibCheck": true,

		/* Bundler mode */
		"moduleResolution": "bundler",
		"allowImportingTsExtensions": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"noEmit": true,
		"jsx": "react-jsx",
		"paths": {
			"@/*": ["./src/*"],
			"@sys/*": ["./sys/*"],
			"@assets/*": ["./src/assets/*"],
			"@structs/*": ["./src/structs/*"]
		},

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true,

		"typeRoots": ["./node_modules/@types", "./node_modules/@mercuryworkshop/scramjet/lib"]
	},
	"include": ["src", "node_modules/@mercuryworkshop/scramjet/lib/types.d.ts"]
}
